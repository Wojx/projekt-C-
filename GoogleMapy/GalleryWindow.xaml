<Window x:Class="GoogleMapy.GalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleMapy"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Galeria" Height="500" Width="430">
    <Grid Height="469" VerticalAlignment="Top">
        <Image x:Name="galleryImage" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="400" Margin="10,0,0,0"/>
        <Button x:Name="nextButton" Content="Następny" HorizontalAlignment="Left" Margin="335,432,0,0" VerticalAlignment="Top" Width="75" Click="nextButton_Click"/>
        <Button x:Name="previousButton" Content="Poprzedni" HorizontalAlignment="Left" Margin="10,432,0,0" VerticalAlignment="Top" Width="75" Click="previousButton_Click"/>
        <Label x:Name="countLabel" Content="0/0" Margin="185,436,0,0" VerticalAlignment="Top" Width="58" Height="23" HorizontalAlignment="Left"/>
    </Grid>
</Window>
